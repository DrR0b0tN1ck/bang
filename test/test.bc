templates:
  presentation:
    default_arg: title
    text: |
      <html>
          <body>
          !slide[$title]{
            <b>$title</b>
          }
          
          $body
        </body>
      </html>

  slide:
    default_arg: title
    text: |
      <section>
        <h1>$title</h1>
        $body
      </section>

  img:
    default_arg: src
    special_args:
      '@': style
      '~': attribs
    text: "<img src='$src' ?attribs style='?style'>"

  div:
    default_arg: attribs
    special_args:
      '@': style
    text: "<div ?attribs style='?style'>$body</div>"

  ib:
    inherit_from: div
    style: 'display: inline-block;'

  vat:
    inherit_from: div
    style: 'vertical-align: top;'

  bigskip:
    inherit_from: div
    style: "padding-bottom: 20px"

  tt:
    text: "<tt>$body</tt>"

